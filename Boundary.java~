//Name: Are Oelsner
//My Boundary Class

public class Boundary {
	public double xmax;
	public double xmin;
	public double ymax; 
	public double ymin;

	public Boundary() {
		xmax = 100;
		xmin = 0;
		ymax = 100;
		ymin = 0;
	}
	
	public Boundary(double _xmin, double _xmax, double _ymin, double _ymax) {
		xmin = _xmin;
		xmax = _xmax;
		ymin = _ymin;
		ymax = _ymax;
	}

}

